@{
}
@model ModelListViewModel;
<h1>Vehicle Model table</h1>
<form method = "post">
    <table class = "table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Abrv
                </th>
                <th>
                    Make Id
                </th>
            </tr>
        </thead>
        <tbody>          
        @foreach (var vehicleModel in Model.vehicleModelList)
        {
            <tr>
                <td>@vehicleModel.Id</td>
                <td>@vehicleModel.Name</td>
                <td>@vehicleModel.Abrv</td>
                <td>@vehicleModel.MakeId</td>
                <td>
                    <button type ="submit" formmethod="get" asp-action="UpdateModel" asp-route-id = "@vehicleModel.Id">Update</button>                   
                    <button type ="submit" asp-action="Delete" asp-route-id = "@vehicleModel.Id" >Delete</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
</form>

<form method = "get">
    @if (await ViewBag.VehicleMakeIsNull)
    {
        <p>Create Vehicle Make first!</p>
    }
    else
    {
        <button  asp-action="CreateModel">Create</button>     
    }

</form>
